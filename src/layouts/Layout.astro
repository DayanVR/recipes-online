---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Chefs-Online | Order quick and easy." />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/recipes-recipe-svgrepo-com.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="container">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
    scrollbar-gutter: stable;
  }
  body {
    background-color: #0d1426;
    margin: 0 auto;
    padding: 1.5rem;
  }
</style>
